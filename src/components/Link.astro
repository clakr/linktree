---
import type { HTMLAttributes } from "astro/types";
import { twMerge } from "tailwind-merge";

type Props = HTMLAttributes<"a">;

const { class: className, ...rest } = Astro.props;
---

<a
  class={twMerge(
    "[&>svg]:size-6 border-2 border-neutral-950 rounded-lg flex items-center justify-center py-3 gap-x-2 font-medium shadow-lg shadow-neutral-950/10",
    className,
  )}
  {...rest}><slot /></a
>
